# Forex & Gold Trading System - Environment Variables
# Copy this file to .env and fill in your API keys

# Broker API credentials (FOREX.com)
FOREXCOM_API_KEY=your_api_key_here
FOREXCOM_API_SECRET=your_api_secret_here
FOREXCOM_ACCOUNT_ID=your_account_id_here
FOREXCOM_API_URL=https://api.forex.com/api/v1
FOREXCOM_STREAMING_URL=wss://streaming.forex.com/v1

# Alpaca Markets API credentials
# Get your API keys from https://app.alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here
# Use this URL for paper trading (practice)
ALPACA_API_URL=https://paper-api.alpaca.markets
# Use this URL for live trading (CAUTION: real money)
# ALPACA_API_URL=https://api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Legacy OANDA API credentials (for reference, no longer used)
# OANDA_API_KEY=your_api_key_here
# OANDA_ACCOUNT_ID=your_account_id_here

# News API credentials (for sentiment analysis)
# Get your API key from https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# Trading parameters
# Set to "development" for simulation mode, "production" for live trading
ENVIRONMENT=development

# Execution settings
# Set to true to enable automatic execution of trades via Alpaca
EXECUTE_TRADES=false

# Trading Parameters
# Timeframes to analyze (comma-separated)
TIMEFRAMES=1h,4h,1d

# Symbols to analyze (comma-separated)
# Format: For forex use 'EUR/USD', for stocks use ticker symbol like 'AAPL'
SYMBOLS=EUR/USD,GBP/USD,USD/JPY,XAU/USD,AAPL,MSFT,GOOG

# Risk parameters
MAX_RISK_PER_TRADE=0.02
MAX_OPEN_POSITIONS=5

# Alpaca trading parameters
ALPACA_MIN_ORDER_SIZE=1
ALPACA_MAX_POSITIONS=5

# Optional: Webhook notifications
# WEBHOOK_URL=your_webhook_url  # Uncomment to enable 